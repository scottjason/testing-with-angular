.auth-wrap
    width 100%
  .auth-template
    display flex
    flex-direction column
    justify-content center
    align-items center
    input
      width 90%
      height 60px
      color darken(white, 10%)
      background-color $color-light-orange
      padding 10px
      font-size 14px
      border transparent
      outline 0
      &:nth-child(1)
        margin-bottom 10px
      &:nth-child(2)
        margin-bottom 20px
    button
     display flex
     justify-content center
     align-items center
     width 90%
     height 60px
     font-size 21px
     color darken(white, 30%)
     background-color $color-dark-orange
     outline 0
     border transparent
     cursor pointer
    .opt
       margin 10px 0 0 0
       color darken(white, 20%)
       font-size 12px
       cursor pointer
    .err
      margin 10px 0 0 0
      color white
